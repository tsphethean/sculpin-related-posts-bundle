<?xml version="1.0" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

  <parameters>
    <parameter key="sculpin_related_posts.generator.class">Tsphethean\Sculpin\Bundle\RelatedPostsBundle\RelatedPostsGenerator</parameter>
  </parameters>

  <services>
    <service id="sculpin_related_posts.generator" class="%sculpin_related_posts.generator.class%">
      <argument type="service" id="sculpin.source_permalink_factory" />
      <tag name="kernel.event_subscriber" />
    </service>
  </services>

</container>
